@using EasyTrip5.Models.Entities
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<!DOCTYPE HTML5>
<html>
<body>

    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot">Plan the Easy Trip</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/glass.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Restaurants</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/flight.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Flights</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/group.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Things to do</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/key.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Vacation Rents</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">

                        <div class="slider">
                            <ul class="rslides" id="slider1">
                                <li><img src="~/web/images/img1.jpg" alt=""></li>
                                <li><img src="~/web/images/img2.jpg" alt=""></li>
                                <li><img src="~/web/images/img3.jpg" alt=""></li>
                                <li><img src="~/web/images/img4.jpg" alt=""></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3>Welcome to our Travel Company!</h3>
                    <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis nostrud exerci tation ullamcorper suscipit lobortis nisl ut aliquip ex ea commodo consequat. Duis autem vel eum iriure dolor in hendrerit in vulputate velit esse molestie consequat, vel illum dolore eu feugiat nulla facilisis at vero eros et accumsan et iusto odio dignissim qui blandit praesent luptatum zzril delenit augue duis dolore te feugait nulla facil</p>

                </div>

                <div class="con-bot">
                    @foreach (var item in ViewBag.Degerler as List<Blog>)
                    {
                        <div class="left">
                            <div class="bot-left">
                                <img src="@item.Blogimage" alt="" />
                            </div>
                            <div class="left-text">
                                <h4>@item.Baslik</h4>
                                <span class="doller">@item.Tarih</span>
                                <p>@item.Aciklama.Substring(0,150)</p>
                                <p><a href="/Blog/BlogDetail/@item.Id"><span class="read">Read More >></span></a></p>
                            </div>
                        </div>
                    }


                    <div class="right">
                        <div class="bot-left">
                            <img src="~/web/images/pic2.jpg" />
                        </div>
                        <div class="left-text">
                            <h4>Buraya Başlık Gelecek</h4>
                            <span class="doller">Buraya Tarih Gelecek</span>
                            <p>Buraya Açıklama Gelecek</p>
                            <p><a href="#"><span class="read">Read More >></span></a></p>
                        </div>
                    </div>





                    <div class="clear"></div>
                </div>

                <div class="grids">
                    <div class="box1">
                        <div class="padding">
                            <h4>This Week's Top 10</h4>

                            <ul class="list list-pad">
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in ViewBag.Degerler2 as List<Blog>)
                                {
                                    <li class="list-bg">
                                        <span>
                                            @{
                                                i++;
                                            }
                                            @i
                                        </span><a href="/Blog/BlogDetail/@item.Id">@item.Baslik</a>
                                    </li>
                                }
                            </ul>
                        </div>




                        <div class="padding1">
                            <h4>Our Best Places</h4>
                            <div class="box-left">
                                @foreach (var item in ViewBag.Obp as List<Blog>)
                                {
                                    <div class="bot-img">
                                        <img src="@item.Blogimage" alt="" />
                                    </div>
                                    <div class="bot-desc">
                                        <p>@item.Aciklama.Substring(0,75) ...</p>
                                    </div>
                                    <div class="clear"></div>
                                }
                            </div>

                            <div class="box1-left">
                            @foreach (var cs in ViewData["BenimDegerlerim"] as List<Blog>)
                            {
                                
                                    <div class="bot-img">
                                        <img src="@cs.Blogimage" alt="" />
                                    </div>
                                    <div class="bot-desc1">
                                        <p>@cs.Aciklama.Substring(0,75)</p>
                                    </div>
                                    <div class="clear"></div>
                            }
                            </div>
                        </div>
                        <div class="clear"></div>


                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="wrap">
        </div>
    </div>
</body>
</html>
